{
  "version": 2,
  "builds": [
    { "src": "index.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" } 
  ],
  "routes": [
    { "src": "/api/scrape", "dest": "/index.js" }, 
    { "src": "/(.*)", "dest": "/public/$1" }      
  ],
  "env": {
    "PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD": "1"
  }
}

